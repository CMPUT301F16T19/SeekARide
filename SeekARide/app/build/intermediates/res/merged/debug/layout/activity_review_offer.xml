<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.c301t19.cs.ualberta.seekaride.activities.ReviewOfferActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/review_Description_Text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Start Location"
        android:id="@+id/review_Slocation_Text"
        android:layout_below="@+id/review_Description_Text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="End Location"
        android:id="@+id/review_Elocation_Text"
        android:layout_below="@+id/review_Slocation_Text"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/review_Slocation_Text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rider Info"
        android:id="@+id/review_Info_Text"
        android:layout_below="@+id/review_Elocation_Text"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/review_Elocation_Text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/review_Back_Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/review_Info_Text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Offer"
        android:id="@+id/review_Cancel_Button"
        android:layout_above="@+id/review_Back_Button"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/review_Back_Button" />
</RelativeLayout>
