<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.c301t19.cs.ualberta.seekaride.activities.ViewProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User Profile"
        android:id="@+id/view_MyProfile_Text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/View_user_text"
        android:text="Username"
        android:layout_below="@+id/view_MyProfile_Text"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/edit_Car_Text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/edit_Phone_Text"
        android:layout_below="@+id/View_user_text"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/View_user_text"
        android:text="Phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/edit_Email_Text"
        android:layout_below="@+id/edit_Phone_Text"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/edit_Phone_Text"
        android:text="Email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/edit_Car_Text"
        android:layout_below="@+id/edit_Email_Text"
        android:text="Type of Car"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/view_Profile_Back_Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/edit_Car_Text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:id="@+id/accept_Driver"
        android:layout_above="@+id/view_Profile_Back_Button"
        android:layout_alignEnd="@+id/view_Profile_Back_Button"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_Profile_ListView"
        android:layout_below="@+id/view_Rating"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/accept_Driver" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rating"
        android:id="@+id/view_Rating"
        android:layout_below="@+id/edit_Car_Text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
