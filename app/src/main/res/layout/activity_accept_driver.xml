<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".deprecated.AcceptDriverActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/accept_Description_Text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Start Location"
        android:id="@+id/accept_Start_Location"
        android:layout_below="@+id/accept_Description_Text"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/accept_Description_Text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="End Location"
        android:id="@+id/accept_ELocation_Text"
        android:layout_below="@+id/accept_Start_Location"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/accept_Start_Location" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fare"
        android:id="@+id/accept_Fare_Text"
        android:layout_below="@+id/accept_ELocation_Text"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/accept_ELocation_Text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Driver Info"
        android:id="@+id/accept_Info_Text"
        android:layout_below="@+id/accept_Fare_Text"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/accept_Fare_Text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Request"
        android:id="@+id/accept_Delete_Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/accept_Info_Text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Request"
        android:id="@+id/accept_Edit_Button"
        android:layout_above="@+id/accept_Delete_Button"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/accept_Delete_Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept Offer"
        android:id="@+id/accept_Accept_Button"
        android:layout_above="@+id/accept_Edit_Button"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/accept_Edit_Button" />
</RelativeLayout>
