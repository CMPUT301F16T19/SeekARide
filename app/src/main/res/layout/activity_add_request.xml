<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.AddRequestActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_Description_Text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Description" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_Slocation_Text"
        android:layout_below="@+id/add_Description_Text"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/add_Description_Text"
        android:hint="Start Location"
        android:focusableInTouchMode="false"
        android:clickable="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_Elocation_Text"
        android:layout_below="@+id/add_Slocation_Text"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/add_Slocation_Text"
        android:hint="End Location"
        android:focusableInTouchMode="false"
        android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Recommended Fare"
        android:id="@+id/add_RecFare_Text"
        android:layout_below="@+id/add_Elocation_Text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_Fare_Text"
        android:layout_below="@+id/add_RecFare_Text"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/add_RecFare_Text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/add_Back_Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/add_Fare_Text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Request"
        android:id="@+id/add_Create_Button"
        android:layout_above="@+id/add_Back_Button"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/add_Back_Button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$0.00"
        android:id="@+id/recommendedFareNumber"
        android:layout_below="@+id/add_Elocation_Text"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
