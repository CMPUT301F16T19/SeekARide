<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.c301t19.cs.ualberta.seekaride">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.RiderActivity" />
        <activity android:name=".activities.DriverActivity" />
        <activity android:name=".activities.AddRequestActivity" />
        <activity android:name=".activities.SearchRequestsActivity"></activity>
    </application>

</manifest>